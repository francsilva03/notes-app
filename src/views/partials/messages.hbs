{{#if success_msg}}

  <div
    class="d-flex justify-content-between alert alert-success alert-dismissible fade show"
    role="alert"
  >

    {{success_msg}}
    <button
      type="button"
      class="btn btn-danger btn-sm d-flex"
      data-bs-dismiss="alert"
      aria-label="Close"
    >close</button>
  </div>

{{/if}}

{{#if error_msg}}

  <div
    class="d-flex justify-content-between alert alert-danger alert-dismissible fade show"
    role="alert"
  >

    {{error_msg}}
    <button
      type="button"
      class="btn btn-success btn-sm d-flex"
      data-bs-dismiss="alert"
      aria-label="Close"
    >close</button>
  </div>

{{/if}}